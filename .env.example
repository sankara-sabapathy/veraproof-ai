# Port Configuration (see .env.ports for centralized port definitions)
BACKEND_HTTP_PORT=8100
BACKEND_HTTPS_PORT=8443
PARTNER_DASHBOARD_PORT=8200
VERIFICATION_INTERFACE_PORT=8300
POSTGRES_PORT=5432
LOCALSTACK_PORT=4566

# Database
DATABASE_URL=postgresql://veraproof:veraproof_dev_password@localhost:${POSTGRES_PORT}/veraproof

# AWS LocalStack
AWS_ENDPOINT_URL=http://localhost:${LOCALSTACK_PORT}
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_REGION=us-east-1
S3_BUCKET_NAME=veraproof-artifacts

# JWT
JWT_SECRET=dev_jwt_secret_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=1
REFRESH_TOKEN_EXPIRATION_DAYS=30

# Application
ENVIRONMENT=development
BACKEND_URL=http://localhost:${BACKEND_HTTP_PORT}
FRONTEND_VERIFICATION_URL=http://localhost:${VERIFICATION_INTERFACE_PORT}
FRONTEND_DASHBOARD_URL=http://localhost:${PARTNER_DASHBOARD_PORT}

# CORS
CORS_ORIGINS=http://localhost:${VERIFICATION_INTERFACE_PORT},http://localhost:${PARTNER_DASHBOARD_PORT},https://localhost:${BACKEND_HTTPS_PORT}

# Rate Limiting
MAX_CONCURRENT_SESSIONS=10
API_RATE_LIMIT_PER_MINUTE=100

# Session
SESSION_EXPIRATION_MINUTES=15
SESSION_EXTENSION_MINUTES=10

# Artifact Storage
ARTIFACT_RETENTION_DAYS=90
SIGNED_URL_EXPIRATION_SECONDS=3600

# Mock Services (for development)
USE_MOCK_SAGEMAKER=true
USE_MOCK_RAZORPAY=true
USE_LOCAL_AUTH=true
