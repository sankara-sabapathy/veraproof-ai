# Development Environment Configuration
# Used for local development with localhost URLs

# Database
DATABASE_URL=postgresql://veraproof:veraproof_dev_password@localhost:5432/veraproof

# AWS LocalStack
AWS_ENDPOINT_URL=http://localhost:4566
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_REGION=us-east-1
S3_BUCKET_NAME=veraproof-artifacts

# JWT
JWT_SECRET=dev_jwt_secret_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=1
REFRESH_TOKEN_EXPIRATION_DAYS=30

# Application URLs - LOCALHOST for development
ENVIRONMENT=development
BACKEND_URL=http://localhost:8000
FRONTEND_VERIFICATION_URL=http://localhost:8080
FRONTEND_DASHBOARD_URL=http://localhost:4200

# CORS - Allow localhost origins
CORS_ORIGINS=http://localhost:8080,http://localhost:3000,http://localhost:4200

# Rate Limiting
MAX_CONCURRENT_SESSIONS=10
API_RATE_LIMIT_PER_MINUTE=100

# Session
SESSION_EXPIRATION_MINUTES=15
SESSION_EXTENSION_MINUTES=10

# Artifact Storage
ARTIFACT_RETENTION_DAYS=90
SIGNED_URL_EXPIRATION_SECONDS=3600

# Mock Services (enabled for development)
USE_MOCK_SAGEMAKER=true
USE_MOCK_RAZORPAY=true
USE_LOCAL_AUTH=true
