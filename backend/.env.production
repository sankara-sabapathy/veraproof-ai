# Production Environment Configuration
# Used for AWS Lightsail deployment

# Database - Use RDS endpoint
DATABASE_URL=postgresql://veraproof_admin:CHANGE_IN_PRODUCTION@your-rds-endpoint:5432/veraproof

# AWS Production
AWS_REGION=ap-south-1
S3_BUCKET_NAME=veraproof-artifacts-prod
ARTIFACTS_BUCKET=veraproof-artifacts-prod
BRANDING_BUCKET=veraproof-branding-prod

# JWT - CHANGE IN PRODUCTION
JWT_SECRET=CHANGE_THIS_IN_PRODUCTION
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=1
REFRESH_TOKEN_EXPIRATION_DAYS=30

# Application URLs - CloudFront/Domain URLs
ENVIRONMENT=production
STAGE=prod
BACKEND_URL=https://api.yourdomain.com
FRONTEND_VERIFICATION_URL=https://verify.yourdomain.com
FRONTEND_DASHBOARD_URL=https://dashboard.yourdomain.com

# CORS - Production origins only
CORS_ORIGINS=https://verify.yourdomain.com,https://dashboard.yourdomain.com

# Rate Limiting
MAX_CONCURRENT_SESSIONS=100
API_RATE_LIMIT_PER_MINUTE=1000

# Session
SESSION_EXPIRATION_MINUTES=15
SESSION_EXTENSION_MINUTES=10

# Artifact Storage
ARTIFACT_RETENTION_DAYS=90
SIGNED_URL_EXPIRATION_SECONDS=3600

# Production Services
USE_MOCK_SAGEMAKER=false
USE_MOCK_RAZORPAY=false
USE_LOCAL_AUTH=false

# Cognito (if using AWS Cognito)
COGNITO_USER_POOL_ID=your-user-pool-id
COGNITO_CLIENT_ID=your-client-id
